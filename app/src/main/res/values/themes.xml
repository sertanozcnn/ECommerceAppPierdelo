<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.PierdeloApp" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:itemTextAppearance">@style/popupOverflowMenu</item>
        <item name="android:popupMenuStyle">@style/popupBGStyle</item>

    </style>
    <style name="Theme.PierdeloApp" parent="Base.Theme.PierdeloApp" />




    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_semibold</item>

    </style>

    <style name="popupOverflowMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">#57636F</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="popupBGStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_popup_background</item>
    </style>


    <style name="errorToast">
        <item name="stTextColor">#723036</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#F7D7DA</item>
        <item name="stRadius">15dp</item>
        <item name="stIconStart">@drawable/error_logo</item>
    </style>

    <style name="successToast">
        <item name="stColorBackground">#D4ECDA</item>
        <item name="stTextColor">#326E41</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stRadius">15dp</item>
        <item name="stIconStart">@drawable/success_logo</item>
    </style>

    <style name="infoToast">
        <item name="stColorBackground">#CDE5FE</item>
        <item name="stTextColor">#325981</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stRadius">15dp</item>
        <item name="stIconStart">@drawable/info_logo</item>
    </style>

    <style name="warningToast">
        <item name="stColorBackground">#FFF2CF</item>
        <item name="stTextColor">#836A27</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stRadius">15dp</item>
        <item name="stIconStart">@drawable/warning_logo</item>
    </style>


</resources>