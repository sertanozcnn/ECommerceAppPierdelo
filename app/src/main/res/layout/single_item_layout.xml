<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="170dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_photo" />


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rlcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cepli Yelehjgfhjk"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#57636F" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            >

            <RatingBar
                android:id="@+id/item_rating"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="0.5"
                android:rating="3"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="#FBBA32"
                android:layout_gravity="center"
                android:layout_below="@id/bs_name"
                />




            <TextView
                android:id="@+id/item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1299.0 â‚º"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                />





        </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlcard"
        >
        <TextView
            android:id="@+id/item_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_rating"
            android:text="4.5"
            android:textSize="10sp"
            android:textColor="#FBBA32"
            android:fontFamily="@font/nunito_semibold"
            />
    </LinearLayout>


</LinearLayout>